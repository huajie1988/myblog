{% extends "TarsierAdminBundle::layout.html.twig" %}



        {% block main %}
        <h1 class="page-header">Dashboard</h1>

        <div class="row placeholders">
            <div class="col-xs-6 col-sm-6 placeholder">
                <div class="panel panel-primary">
                    <div class="panel-heading">Hello,{{ userName }}&nbsp;&nbsp;Today is {{ time|date('l') }} {{ time|date('M d, Y h:s') }}</div>
                    <div class="panel-body t_l">
                        {{ systemInfo|raw }}
                    </div>
                </div>
            </div>
            {% if article_status['draft']>0 %}
            <div class="col-xs-6 col-sm-2 placeholder">
                <div class="panel panel-info">
                    <div class="panel-heading">草稿</div>
                    <div class="panel-body">
                        <h2>Total:{{ article_status['draft']}}</h2>
                    </div>
                </div>
            </div>
            {% endif %}
            {% if article_status['release']>0 %}
            <div class="col-xs-6 col-sm-2 placeholder">
                <div class="panel panel-success">
                    <div class="panel-heading">发布</div>
                    <div class="panel-body">
                        <h2>Total:{{ article_status['release']}}</h2>

                    </div>
                </div>
            </div>
            {% endif %}
            {% if article_status['delete']>0 %}
            <div class="col-xs-6 col-sm-2 placeholder">
                <div class="panel panel-danger">
                    <div class="panel-heading ">删除</div>
                    <div class="panel-body">
                        <h2>Total:{{ article_status['delete']}}</h2>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>

        <h2 class="sub-header">Hot Article</h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Create Time</th>
                    <th>Click</th>
                </tr>
                </thead>
                <tbody>
                {% for key,ha in hotArticle %}
                <tr>
                    <td>{{ key+1 }}</td>
                    <td><a href="/detail/id/{{ ha.id }}" target="_blank">{{ ha.title }}</a></td>
                    <td>{{ ha.create_time|date('M d, Y h:s') }}</td>
                    <td>{{ ha.click }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endblock %}


